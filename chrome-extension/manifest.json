{
  "manifest_version": 3,
  "name": "Chat Automator",
  "version": "1.0",
  "permissions": ["scripting", "tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": ["lib/*"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": ["http://localhost:8000/*"]
}
